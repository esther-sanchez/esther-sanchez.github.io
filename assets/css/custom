/* Make the left sidebar stick as you scroll */
.page__sidebar {
  position: sticky;
  top: 1.25rem;                 /* gap from the top of the viewport */
  max-height: calc(100vh - 1.75rem);
  overflow: auto;               /* scroll only the sidebar if it gets long */
}

/* Optional: slightly smaller avatar so it breathes better */
.author__avatar img {
  max-width: 140px;             /* tweak to taste: 120â€“160px */
}

/* On phones, let the sidebar flow normally */
@media (max-width: 768px) {
  .page__sidebar {
    position: static;
    max-height: none;
    overflow: visible;
  }
  .author__avatar img { max-width: 120px; }
}
